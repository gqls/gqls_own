# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/artful64"
  config.vm.provision "shell", inline: <<-EOC
    sed -i -e "\\#PasswordAuthentication yes# s#PasswordAuthentication yes#PasswordAuthentication no#g" /etc/ssh/sshd_config
    service ssh restart
  EOC
  config.ssh.username = 'vagrant'
  config.vm.network "private_network", ip: "192.168.33.10"
  config.vm.synced_folder ".", "/project", owner: "vagrant", group: "www-data"
  config.vm.provision "shell", path: "./config/vagrant_provision/vagrant.init.sh"

end


